@{
  Layout="Shared/_Layout.cshtml";
}

<h1>CD Information:</h1>
<form action="/" method="post" class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2" for="artist">Enter the Artist Name: </label>
    <div class-"col-md-10">
      <input id="artist" name="artist" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="title">Enter the Title Name: </label>
    <div class-"col-md-10">
      <input id="title" name="title" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="label">Enter the Label Name:</label>
    <div class-"col-md-10">
      <input id="label" name="label" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="genre">Enter the Genre Here: </label>
    <div class-"col-md-10">
      <input id="genre" name="genre" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="catalogIdentification">Enter the Catalog Number Here: </label>
    <div class-"col-md-10">
      <input id="catalogIdentification" name="catalogIdentification" type="text">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="condition">Choose the Condition Here: </label>

      <select class="form-control" name="condition">

        <option name="condition" value="Poor">Poor</option>
      
        <option name="condition" value="Fair">Fair</option>

        <option name="condition" value="Good">Good</option>

        <option name="condition" value="Excellent">Excellent</option>
      </select>

  </div>

  <div class="form-group">
    <label class="col-md-2" for="worth">Enter the Value Here: </label>
    <div class-"col-md-10">
      <input id="worth" name="worth" type="decimal">
    </div>
  </div>

  <button type="submit">List</button>
</form>
